{
  "meta": {
    "name": "The Best Network in the world",
    "work_dir": "will store shit",
    "eval_dir": "where to post evaluations",
    "model_dir": "where to store models",
    "generate_computational_graph": true
  },
  "data": {
    "data_var_1": {
      "name": "Visual",
      "shape": [
        256,
        256,
        3
      ],
      "dtype": "uint8",
      "container": "path/to/the/container/var1"
    },
    "data_var_2": {
      "name": "Textual",
      "shape": [
        300
      ],
      "dtype": "float32",
      "container": "path/to/the/container/var2"
    },
    "data_var_3": {
      "name": "Class Labels",
      "shape": [
        1645458
      ],
      "dtype": "float32",
      "container": "path/to/the/container/var2"
    }
  },
  "network": {

    "__input__": [
      "data_var_1",
      "data_var_2"
    ],

    "__output__": [
      "layer2",
      "layer3"
    ],

    "__states__":
    {
      "train": false,
      "hubbabubba": 0.5
    },

    "layer1": {
      "type": "L.Convolution2D",
      "is_variable": false,
      "input": {
        "x": "data_var_1",
      },
      "params": {
        "in_channels": 3,
        "out_channels": 64,
        "ksize": 2,
        "stride": 1,
        "pad": 0,
        "wscale": 1,
        "bias": 0,
        "nobias": false,
        "use_cudnn": true,
        "initialW": null,
        "initial_bias": null
      }
    },
    "layer2": {
      "type": "L.Convolution2D",
      "is_variable": true,
      "input": {
        "x": "layer1",
      },
      "params": {
        "in_channels": 64,
        "out_channels": 64,
        "ksize": 2,
        "stride": 1,
        "pad": 0,
        "wscale": 1,
        "bias": 0,
        "nobias": false,
        "use_cudnn": true,
        "initialW": null,
        "initial_bias": null
      }
    },
    "layer3": {
      "type": "F.dropout",
      "is_variable": false,
      "input": {
        "x": "layer2",
      },
      "params": {
        "ratio": 0.5,
        "train": "notrain"
      }
    }
  },
  "loss": {
    "__loss__": [
      [
        "visual_loss",
        0.7
      ],
      [
        "textual_loss",
        0.3
      ],
      [
        "class_loss",
        1
      ]
    ],
    "visual_loss": {
      "type": "F.mean_squared_error",
      "x0": "layer1",
      "x1": "data_var_1"
    },
    "textual_loss": {
      "type": "F.mean_squared_error",
      "x0": "layer2",
      "x1": "data_var_2"
    },
    "class_loss": {
      "type": "F.softmax_cross_entropy",
      "x": "layer3",
      "t": "data_var_3",
      "params": {
        "use_cudnn": true,
        "normalize": true
      }
    },
    "accuracy": {
      "func": "1 - $class_loss"
    }
  },
  "optimizer": {
    "type": "MomentumSGD",
    "params": {
      "lr": 0.01,
      "momentum": 0.9
    }
  }
}